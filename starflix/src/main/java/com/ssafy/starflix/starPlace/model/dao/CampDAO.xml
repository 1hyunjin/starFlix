<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.ssafy.starflix.starPlace.model.dao.CampDAO">

	<select id="getList" resultMap="camp"
		resultType="com.ssafy.starflix.starPlace.model.dto.CampDTO">
		<![CDATA[
			select c.*,
			(6371 * acos(cos(radians(s.lati)) * cos(radians(c.lati)) * cos(radians(c.long) - radians(s.long)) + sin(radians(s.lati)) * sin(radians(c.lati)))) AS distance
			From camp c , star_place s
			where s.idx = #{idx} 
			having distance <= 5
			order by distance asc;
		]]>
	</select>

	<resultMap
		type="com.ssafy.starflix.starPlace.model.dto.CampDTO" id="camp">
		<result property="idx" column="idx" />
		<result property="title" column="title" />
		<result property="addr" column="addr" />
		<result property="content" column="content" />
		<result property="img" column="img" />
		<result property="lati" column="lati" />
		<result property="longj" column="long" />
	</resultMap>
</mapper>