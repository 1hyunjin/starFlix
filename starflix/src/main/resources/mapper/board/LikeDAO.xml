<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.starflix.board.model.dao.LikeDAO">

	<select id="getLikeCountByUser" resultType="int">
		select count(*) from
		board_like
		where bno = #{bno}
		and user_id = #{userId}
	</select>

	<select id="getLikeCountByArticle" resultType="int">
		select count(*)
		from board_like
		where bno = #{bno}
	</select>

	<insert id="insertLike">
		insert into board_like (bno, user_id)
		values (#{bno}, #{userId})
	</insert>

	<delete id="deleteLike">
		delete from board_like
		where bno = #{bno} and user_id = #{userId}
	</delete>

	<resultMap type="com.ssafy.starflix.board.model.dto.LikeDTO"
		id="like">
		<result property="bno" column="bno" />
		<result property="userId" column="user_id" />
	</resultMap>
</mapper>